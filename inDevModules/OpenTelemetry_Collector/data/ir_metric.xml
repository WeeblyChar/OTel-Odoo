<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="cron_jobs_not_triggered" model="ir.metric" forcecreate="True">
        <field name="name">odoo_cron_jobs_not_triggered</field>
        <field
            name="description"
        >Cron jobs with next run date older than two days ago.</field>
        <field name="metric_type">gauge</field>
        <field name="model_id" eval="ref('base.model_ir_cron')" />
        <!-- <field
            name="domain"
        >['&amp;', ('nextcall', '&lt;=', (datetime.datetime.now() - datetime.timedelta(days=2)).strftime('%Y-%m-%d')), ('active', '=', True)]</field> -->
    </record>

    <record id="active_users" model="ir.metric" forcecreate="True">
        <field name="name">odoo_database_active_users</field>
        <field name="description">Count active users.</field>
        <field name="metric_type">gauge</field>
        <field name="model_id" eval="ref('base.model_res_users')" />
        <field name="domain">['&amp;',('active','=',True),('share','=',False)]</field>
        <field name="field_id" eval="ref('base.field_res_users__email')" />
        <field name="operation">count</field>
    </record>

    <record id="user_online" model="ir.metric" forcecreate="True">
        <field name="name">user_online</field>
        <field name="description">Count active users (Currently Logged In).</field>
        <field name="metric_type">counter</field>
        <field name="model_id" eval="ref('bus.model_bus_presence')" />
        <field name="domain">[(('status','=','online'))]</field>
        <field name="field_id" eval="ref('bus.field_bus_presence__id')" />
        <field name="operation">count</field>
    </record>

    <record id="user_total" model="ir.metric" forcecreate="True">
        <field name="name">user_total</field>
        <field name="description">Count total users (Logged In at least once).</field>
        <field name="metric_type">counter</field>
        <field name="model_id" eval="ref('bus.model_bus_presence')" />
        <field name="domain">[]</field>
        <field name="field_id" eval="ref('bus.field_bus_presence__id')" />
        <field name="operation">count</field>
    </record>

